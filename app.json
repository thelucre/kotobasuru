{
  "expo": {
    "name": "kotoba-suru",
    "slug": "kotoba-suru",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      "expo-asset"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.eric.how.kotobasuru",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app uses the photo library for OCR screenshots.",
        "NSCameraUsageDescription": "This app uses the camera for OCR functionality."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.eric.how.kotobasuru"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
